   "source": [
    "import heapq as hq\n",
    "\n",
    "h = []\n",
    "N = int(input())\n",
    "for i in range(N):\n",
    "    n = int(input())    \n",
    "    hq.heappush(h, n)\n",
    "\n",
    "total = 0\n",
    "while len(h) > 1:\n",
    "    one = hq.heappop(h)\n",
    "    two = hq.heappop(h)\n",
    "    sum = one + two\n",
    "    total += sum\n",
    "    hq.heappush(h, sum)\n",
    "\n",
    "print(total)"
   ]
  }
